<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".MainActivity_sv"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/rel1"
        android:layout_width="178dp"
        android:layout_height="125dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/purple"
        android:elevation="2dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Take Action"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_baseline_camera_24"
                android:background="@drawable/camera" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/login_white_background">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:id="@+id/image_View"
            android:scaleType="fitCenter"
            android:src="@drawable/scan_leaf"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cardView"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/demoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="0.9"
                android:text="First Import Your Image Using Camera"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible"
                tools:targetApi="o" />

            <ImageView
                android:id="@+id/demoArrow"
                android:layout_width="178dp"
                android:layout_height="175dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:rotation="0"
                android:src="@drawable/ic_baseline_arrow_downward_24"
                android:visibility="visible"
                app:tint="@color/white" />           <!--android:tint="@color/white" />-->

            <TextView
                android:id="@+id/classified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:includeFontPadding="false"
                android:text="Your Plant is : "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:includeFontPadding="false"
                android:letterSpacing="0.06"
                android:text=""
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#D29C9404"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/click_here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:letterSpacing="0.03"
                android:text="Click on the Result to Know More ..."
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15sp" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


































