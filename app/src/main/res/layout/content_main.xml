<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".MainActivity_sv"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/rel1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/action_background"
        android:layout_alignParentBottom="true"
        android:elevation="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Action"
            android:textSize="17sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:layout_width="180dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/camera"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/login_white_background">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:id="@+id/image_View"
            android:scaleType="fitCenter"
            android:src="@drawable/scan_leaf"/>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_below="@id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/demoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:text="First Import Your Image Using Camera"
            android:textColor="@color/white"
            android:lineSpacingMultiplier="0.9"
            android:textSize="14sp"
            android:justificationMode="inter_word"
            tools:targetApi="o"/>
        <ImageView
            android:id="@+id/demoArrow"
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:src="@drawable/arrow_below"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:rotation="-20"
            android:visibility="gone"
            app:tint="@color/white" />           <!--android:tint="@color/white" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Plant is : "
            android:textSize="19sp"
            android:id="@+id/classified"
            android:includeFontPadding="false"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#D29C9404"
            android:textSize="24sp"
            android:id="@+id/result"
            android:clickable="true"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:focusable="true"/>

        <TextView
            android:id="@+id/click_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on the Result to Know More ..."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:letterSpacing="0.03"
            android:layout_marginTop="8dp"/>


    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


































